@{
    ViewData["Title"] = "Home Page";
}
@model User
<link rel="stylesheet" href="~/css/LogReg.css" asp-append-version="true" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
@if (Context.Session.GetInt32("mbr")==2){

<div class="container">
<p class="text-danger">@Context.Session.GetInt32("mbr")</p>
    	<h1 class="text-center mb-5">Chore Tracker</h1><br>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="register-form-link">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								@await Html.PartialAsync("_Login")
								<form id="register-form" asp-action="Register" method="post" role="form" style="display: none;">
									<div class="form-group">
                                        <span asp-validation-for="FName" class="text-danger"></span>
										<input asp-for="FName" id="firstName" tabindex="1" class="form-control" placeholder="First Name" >
									</div>
                                    <div class="form-group">
                                        <span asp-validation-for="LName" class="text-danger"></span>
										<input asp-for="LName" id="lastName" tabindex="1" class="form-control" placeholder="Last Name" >
									</div>
									<div class="form-group">
                                        <span asp-validation-for="Email" class="text-danger"></span>
										<input asp-for="Email" id="email" tabindex="1" class="form-control" placeholder="Email Address">
									</div>
									<div class="form-group">
                                        <span asp-validation-for="Password" class="text-danger"></span>
										<input asp-for="Password" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
									<div class="form-group">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
										<input asp-for="ConfirmPassword" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>  
		</div>
	</div>
}
else if (Context.Session.GetInt32("mbr")==1){
<div class="container">
<p class="text-danger">@Context.Session.GetInt32("mbr")</p>
    	<h1 class="text-center mb-5">Chore Tracker</h1><br>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#"  id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" class="active" id="register-form-link">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								@await Html.PartialAsync("_Login2")
								<form id="register-form" asp-action="Register" method="post" role="form" style="display: block;">
									<div class="form-group">
                                        <span asp-validation-for="FName" class="text-danger"></span>
										<input asp-for="FName" id="firstName" tabindex="1" class="form-control" placeholder="First Name" >
									</div>
                                    <div class="form-group">
                                        <span asp-validation-for="LName" class="text-danger"></span>
										<input asp-for="LName" id="lastName" tabindex="1" class="form-control" placeholder="Last Name" >
									</div>
									<div class="form-group">
                                        <span asp-validation-for="Email" class="text-danger"></span>
										<input asp-for="Email" id="email" tabindex="1" class="form-control" placeholder="Email Address">
									</div>
									<div class="form-group">
                                        <span asp-validation-for="Password" class="text-danger"></span>
										<input asp-for="Password" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
									<div class="form-group">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
										<input asp-for="ConfirmPassword" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>  
		</div>
	</div>
}

<script src="~/js/logReg.js" asp-append-version="true"></script>